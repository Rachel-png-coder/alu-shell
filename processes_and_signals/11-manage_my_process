#!/usr/bin/env bash
# The init script manages another process.
# It can start, stop, or restart the process, and displays messages and creates/deletes a PID file.

PID_FILE="/var/run/my_process.pid"
PROCESS="./manage_my_process"

case "$1" in
    start)
        if [ -f "$PID_FILE" ]; then
            echo "Process is already running."
            exit 1
        fi

        # Start the process in the background
        $PROCESS &
        echo "$!" > "$PID_FILE"
        echo "manage_my_process started"
        ;;

    stop)
        if [ ! -f "$PID_FILE" ]; then
            echo "No PID file found. Process may not be running."
            exit 1
        fi

        # Stop the process using the PID
        pid=$(cat "$PID_FILE")
        kill "$pid" 2>/dev/null
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
        ;;

    restart)
        if [ -f "$PID_FILE" ]; then
            pid=$(cat "$PID_FILE")
            kill "$pid" 2>/dev/null
            rm -f "$PID_FILE"
        fi

        # Start the process again
        $PROCESS &
        echo "$!" > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;

    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
